---
import navigation from "../../data/navigation.json";
import '../styles/components/_navbar.scss';
import '../styles/theme.scss';
import '../styles/variables.scss';
import '../styles/mixins.scss';
function generateLink(phone: string, message: string) {
    return (
        "https://wa.me/" +
        `${phone}` +
        "?text=" +
        `${message.replace(/ /g, "%20")}`
    );
}
---

<header>
    <nav
        class={`navbar navbar-expand-lg position-fixed w-100`}
        id="mainnavigationBar"
    >
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src={navigation.logo} alt="Nav-Logo" height={"45px"} />
            </a>
            <buttonstroke-widthstroke-widthstroke-linecap
                class="navbar-toggler"stroke-widthstroke-width
                type="button"stroke-widthstroke-width
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation"stroke-widthstroke-width
            >stroke-widthstroke-width
                <span class="navbar-toggler-default">
                    <svg
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <line
                            x1="3.5"
                            y1="5.5"
                            x2="21.5"
                            y2="5.5"
                            stroke="#292D32"
                            stroke-width="3"
                            stroke-linecap="round"
                            stroke-linejoin="round"></line>
                        <line
                            x1="4.5"
                            y1="12.5"
                            x2="21.5"
                            y2="12.5"
                            stroke="#292D32"
                            stroke-width="3"
                            stroke-linecap="round"
                            stroke-linejoin="round"></line>
                        <line
                            x1="11.5"
                            y1="19.5"
                            x2="21.5"
                            y2="19.5"
                            stroke="#292D32"
                            stroke-width="3"
                            stroke-linecap="round"
                            stroke-linejoin="round"></line>
                    </svg>
                </span>
                <span class="navbar-toggler-toggled">
                    <svg
                        width="20"
                        height="20"
                        viewBox="0 0 28 28"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            d="M21.5 6.5L6.5 21.5"
                            stroke="#404152"
                            stroke-width="3"
                            stroke-linecap="round"
                            stroke-linejoin="round"></path>
                        <path
                            d="M21.5 21.5L6.5 6.5"
                            stroke="#404152"
                            stroke-width="3"
                            stroke-linecap="round"
                            stroke-linejoin="round"></path>
                    </svg>
                </span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto mb-20 mb-lg-0">
                    {
                        navigation.items.map((link, i) => (
                            <li  class="nav-item">
                                 <a
                                    href={`${link.link}`}
                                    
                                >
                                    {link.text}
                                </a>
                            </li>
                        ))
                    }
                    <li class="nav-item dropdown">
                        <a
                            class="nav-link"
                            href="/"
                            role="link"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                        >
                            Soluciones
                        </a>
                        <ul class="dropdown-menu">
                            {
                                navigation.solutions.map((link, i) => (
                                    <li >
                                        <a
                                            href={`${link.link}`}
                                           
                                        >
                                            {link.text}
                                        </a>
                                    </li>
                                ))
                            }
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a
                            class="nav-link"
                            href="/"
                            role="link"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                        >
                            Productos
                        </a>
                        <ul class="dropdown-menu">
                            {
                                navigation.products.map((link, i) => (
                                    <li >
                                        <a
                                            href={`${link.link}`}
                                           
                                        >
                                            {link.text}
                                        </a>
                                    </li>
                                ))
                            }
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="d-none d-lg-block">
                <div class="nav-item">
                    <a
                        href={`${navigation.btn.link}`}
                        class="btn btn-sm btn-links"
                        class="btn btn-sm btn-primary"
                    >
                        {navigation.btn.text}
                    </a>
                </div>
            </div>
            <div class="whsp-container">
                <a
                    href={`${generateLink(
                        navigation.whsp.number,
                        navigation.whsp.message
                    )}`}
                    target="_blank"
                >
                    <img
                        src={navigation.whsp.src}
                        alt="DescripciÃ³n de la imagen"
                        width={"50"}
                    />
                </a>
            </div>
        </div>
    </nav>
</header>
